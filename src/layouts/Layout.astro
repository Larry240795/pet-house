---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="bg-sky-700">
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="relative flex items-center justify-between h-16">
          <div
            class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start"
          >
            <div class="flex-shrink-0 flex items-center">
              <span class="text-white text-3xl font-bold">adoptare®</span>
            </div>
            <div class="hidden sm:block sm:ml-6">
              <div class="flex space-x-4">
                <a
                  href="#"
                  class="text-gray-300 hover:bg-brand-yellow hover:text-white px-3 py-2 rounded-md text-sm font-medium"
                  >Nosotros</a
                >
                <a
                  href="#"
                  class="text-white hover:bg-brand-yellow hover:text-white px-3 py-2 rounded-md text-sm font-medium"
                  >Adoptar</a
                >
                <!-- More nav items -->
              </div>
            </div>
          </div>
          <div class="flex-1 flex justify-center">
            <div class="w-full px-2 lg:px-6">
              <label for="search" class="sr-only">Buscar</label>
              <div class="relative text-gray-600 focus-within:text-gray-400">
                <span class="absolute inset-y-0 left-0 flex items-center pl-2">
                  <button
                    type="submit"
                    class="p-1 focus:outline-none focus:shadow-outline"
                  >
                    <i class="fas fa-search text-gray-200"></i>
                  </button>
                </span>
                <input
                  id="search"
                  class="py-2 text-sm text-white bg-brand-yellow rounded-md pl-10 focus:outline-none focus:bg-white focus:text-gray-900"
                  placeholder="¿Qué tipo de perro o gato buscas?"
                  autocomplete="off"
                  type="search"
                />
              </div>
            </div>
          </div>
          <div
            class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-end"
          >
            <div
              class="flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0"
            >
              <button
                class="bg-brand-yellow text-white px-3 py-2 rounded-md text-sm font-medium"
                >Dar en adopción</button
              >
              <button
                class="bg-brand-yellow text-white ml-4 px-3 py-2 rounded-md text-sm font-medium"
                >Donar</button
              >
            </div>
          </div>
        </div>
      </div>
    </nav>
    <slot />
    <footer class="container mx-auto p-10">
      <div class="flex flex-wrap justify-between items-center">
        <div class="w-full md:w-auto mb-6 md:mb-0">
          <ul class="list-none md:flex md:space-x-8">
            <li class="md:inline">ADOPTAR</li>
            <li class="md:inline">VOLUNTARIOS</li>
            <li class="md:inline">ALBERGUES</li>
            <!-- More footer links -->
          </ul>
        </div>
        <div class="w-full md:w-auto mb-6 md:mb-0">
          <ul class="list-none md:flex md:space-x-8 justify-center">
            <li class="md:inline">
              <a
                href="https://facebook.com"
                target="_blank"
                rel="noopener noreferrer"
              >
                <i class="fab fa-facebook-f"></i>
              </a>
            </li>
            <li class="md:inline">
              <a
                href="https://instagram.com"
                target="_blank"
                rel="noopener noreferrer"
              >
                <i class="fab fa-instagram"></i>
              </a>
            </li>
            <!-- More social links -->
          </ul>
        </div>
      </div>
      <div
        class="flex flex-wrap justify-between items-center mt-6 border-t border-gray-600 pt-6"
      >
        <div class="w-full md:w-auto">
          <p class="text-xs text-center md:text-right">
            Política de Privacidad | Términos de uso
          </p>
          <p class="text-xs text-center md:text-right mt-2">
            © 2024 Adoptare. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    /* background: #13151a; */
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
